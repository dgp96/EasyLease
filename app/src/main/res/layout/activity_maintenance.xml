<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com.tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"/>
        <EditText
            android:id="@+id/entry1"
            android:minWidth="100dip"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:background="@android:drawable/editbox_background"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"/>
        <EditText
            android:id="@+id/entry2"
            android:minWidth="100dip"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="xxx-xxx-xxxx"
            android:background="@android:drawable/editbox_background"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>
        <EditText
            android:id="@+id/entry3"
            android:minWidth="100dip"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:background="@android:drawable/editbox_background"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"/>

        <EditText
            android:id="@+id/entry4"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:hint="Appliances/Plumbing/Paint/Lighting"
            android:background="@android:drawable/editbox_background"
            android:minWidth="100dip" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permission to Enter?"/>

        <EditText
            android:id="@+id/entry5"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:hint="Yes/No"
            android:minWidth="100dip" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority"/>

        <EditText
            android:id="@+id/entry6"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:hint="Urgent/Routine/Low"
            android:minWidth="100dip" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"/>

        <EditText
            android:id="@+id/entry7"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="textMultiLine"
            android:minWidth="100dip"
            android:minLines="5" />
    </LinearLayout>

    <Button android:id="@+id/submit_request"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Submit" />

</LinearLayout>